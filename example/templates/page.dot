<!DOCTYPE html>
<html>
  <head>{{? it.Webba.path.dirname(it.url) != "."}}
    <base href="{{=it.Webba.path.dirname(it.url).replace(/[^\/]+/g, "..")}}">{{?}}
    <title>My Website - {{=it.Webba.Marca.encodeHTML(it.title)}}</title>
    <link rel="stylesheet" type="text/css" href="style.css">{{? it.dom && it.dom.meta.cssincludes}}
    <style type="text/css">{{~it.dom.meta.cssincludes :value:index}}
{{=it.Webba.Crea.fs.readFileSync(it.Webba.getTopPath(value), "utf8").trim()}}{{~}}
    </style>{{?}}{{? it.dom && it.dom.meta.jsincludes}}
    <script type="text/javascript">{{~it.dom.meta.jsincludes :value:index}}
{{=it.Webba.Crea.fs.readFileSync(it.Webba.getTopPath(value), "utf8").trim()}}{{~}}
    </script>{{?}}
  </head>
  <body>
    <header>
      <h1>My Website</h1>
    </header>
    <main>{{? it.blogIndex }}{{~it.blogIndex :value:index}}
      <article>
        <h2><a href="{{=it.Webba.Marca.encodeHTML(value.url)}}">{{=it.Webba.Marca.encodeHTML(value.dom.meta.title)}}</a></h2>
{{=value.domPreview.toHTML(4)}}{{? value.dom.endPreview }}
        <a href="{{=it.Webba.Marca.encodeHTML(value.url)}}">Read more</a>{{?}}
      </article>{{~}}{{??}}
      <article>
        <h2>{{=it.Webba.Marca.encodeHTML(it.title)}}</h2>
{{=it.dom.toHTML(4)}}{{? it.published }}
        <footer>
          <p><strong>Published</strong>: <time datetime="{{=it.published.toISOString()}}">{{=it.published.toString()}}</time>.</p>
          <p><strong>Last edited</strong>: <time datetime="{{=it.edited.toISOString()}}">{{=it.edited.toString()}}</time>.</p>
        </footer>{{?}}{{? it.comments }}
        <section>
          <h3>Comments</h3>
          {{? it.comments.length == 0}}<p>None yet.</p>{{??}}{{~it.comments :value:index}}<article class="comment">
            <h4>#{{=index+1}}, {{=it.Webba.Marca.encodeHTML(value.author)}}:</h4>
{{=value.dom.toHTML(6)}}
            <footer>
              <p><strong>Submitted</strong>: <time datetime="{{=value.submitted.toISOString()}}">{{=value.submitted.toString()}}</time>.</p>
              <p><strong>Published</strong>: <time datetime="{{=value.published.toISOString()}}">{{=value.published.toString()}}</time>.</p>
              <p><strong>Last edited</strong>: <time datetime="{{=value.edited.toISOString()}}">{{=value.edited.toString()}}</time>.</p>
            </footer>
          </article>{{~}}{{?}}
        </section>{{?}}
      </article>{{?}}
    </main>
    <aside>
      <nav>
        <h2>Pages</h2>
        <ul>
          <li><a href="static.html">Static page</a></li>
          <li><a href="blog/index.html">Blog index</a></li>
        </ul>
        <h2>Feeds</h2>
        <ul>
          <li><a href="feeds/blog-atom.xml">Blog feed</a> (Atom 1.0)</li>
          <li><a href="feeds/blog-rss.xml">Blog feed</a> (RSS 2.0)</li>
        </ul>
      </nav>
    </aside>
    <footer>
      <p>Generated by Webba.</p>
    </footer>
  </body>
</html>
